/**
 * Custom Styles here.
 *
 * ref: https://v1.vuepress.vuejs.org/config/#index-styl
 */

.page-edit
  clear both

.navbar
.sidebar
.page-edit
.page-nav
.header-anchor
.badge
  user-select none

a.sidebar-link:hover
a.sidebar-link.active
  background-color #fdf6f8


// Home 

div.docs-home
  main

    .content__default
      padding-left 0
      padding-right 0
      padding-top 0

    div.content__default,
    footer.page-edit,
    div.page-nav
      max-width 100%

    .last-updated
      display none

    a
      cursor pointer

    div.roof
      font-weight bold
      font-size 16px
      line-height 1.1
      letter-spacing 0.06em
      text-transform uppercase
      color #000
      margin-bottom 8px

    #home-hero
      background #FFBC7D
      text-align center
      padding 160px 1.5rem

      h2
        font-weight bold
        font-size 72px
        line-height 1
        color #000
        margin 0
        border 0

      p
        font-size 18px
        line-height 1.5
        color #000
        border 0
        max-width 900px
        margin 1rem auto 2rem

      a
        display inline-block
        background #FF3700
        color #fff
        padding 12px 24px
        text-decoration none

      a:after
        content " "
        display inline-block
        margin-left 12px
        vertical-align middle
        background-image url(/assets/img/home/arrow-right.svg)
        background-position center center
        background-size contain
        background-repeat no-repeat
        width 12px
        height 24px
        color #fff
        will-change transform
        transition-duration 0.2s
        transition-property transform
        transition-timing-function linear

      a:hover:after,
      a:focus:after
        transform translateX(8px)

    #home-docs
      background #fff
      text-align center
      padding 80px 1.5rem

      h2
        font-weight bold
        font-size 48px
        line-height 1
        color #000
        margin 0 0 40px
        border 0

      p
        font-size 18px
        line-height 1.5
        color #000
        max-width 920px
        margin 1rem auto 0
        border 0

    #home-internals
      background #fff
      text-align center
      padding 80px 1.5rem

      h2
        font-weight bold
        font-size 48px
        line-height 1
        color #000
        margin 0 0 80px
        border 0

      .home-internals-list
        display grid
        gap 24px
        grid-template-columns repeat(3, 1fr)
        max-width 1400px
        margin 0 auto
        text-align left

        .internal
          background #FFBC7D
          padding 24px
          will-change transform
          transition-duration 0.2s
          transition-property transform
          transition-timing-function linear

          h3
            font-size 20px
            font-weight bold
            line-height 1
            text-transform capitalize
            margin-top 0

            a
              color #000
              font-weight 600
              text-decoration none

          p
            font-size 14px
            line-height 1.5
            color #212121

          .more-link
              margin-top 44px

              a
                color #000
                font-size 16px
                font-weight bold

              a:after
                content " "
                display inline-block
                margin-left 12px
                vertical-align middle
                background-image url(/assets/img/home/arrow-right.svg)
                background-position center center
                background-size contain
                background-repeat no-repeat
                width 12px
                height 24px
                will-change transform
                transition-duration 0.2s
                transition-property transform
                transition-timing-function linear

              a:hover,
              a:focus
                text-decoration none

        .internal:hover,
        .internal:focus
          transform translateY(-8px)

          .more-link a:after
            transform translateX(8px)

    #home-components
      background #FFDCC5
      text-align center
      padding 80px 1.5rem

      h2
        font-weight bold
        font-size 48px
        line-height 1.1
        color #000
        margin 0 0 80px
        border 0

      .home-components-list
        display grid
        gap 24px
        grid-template-columns repeat(3, 1fr)
        max-width 1400px
        margin 0 auto
        text-align left

        .component
          background #FFF
          padding 24px
          will-change transform
          transition-duration 0.2s
          transition-property transform
          transition-timing-function linear

          h3
            color #000
            font-weight 600
            font-size 16px
            line-height 1
            text-transform capitalize
            margin-top 0

            a
              color #000
              text-decoration none

          p
            font-size 14px
            line-height 1.5
            color #212121

        .component:hover,
        .component:focus
          transform translateY(-8px)

    #home-testimonials
      background #fff
      text-align center
      padding 80px 1.5rem

      h2
        font-weight bold
        font-size 48px
        line-height 1
        color #000
        margin 0 0 80px
        border 0

      .home-testimonials-list
        display grid
        gap 24px
        grid-template-columns repeat(3, 1fr)
        max-width 1400px
        margin 0 auto
        text-align left

        .testimonial
          display flex
          flex-direction column
          justify-content space-between
          align-items flex-start
          min-height 600px
          padding 40px 31px
          border 1px solid #D2D2D2
          box-sizing border-box
          border-radius 8px
          will-change transform
          transition-duration 0.2s
          transition-property transform
          transition-timing-function linear

          .metric
            font-weight bold
            font-size 16px
            line-height 1.6
            letter-spacing 0.02em
            text-transform uppercase
            color #000000
            margin-bottom 16px

          blockquote          
            font-size 24px
            line-height 1.68
            letter-spacing -0.04em
            color #2B2A34
            border 0
            padding 0
            margin 0
            flex-grow 1
            flex-shrink 1

          p
            font-size 14px
            line-height 1.5
            color #212121
            margin 0

          .name
            font-weight 600
            font-size 22px
            line-height 1.6
            align-self center

          .position
            font-size 16px
            line-height 1.6
            align-self center

        .testimonial:hover,
        .testimonial:focus
          transform translateY(-8px)

    #home-blog
      background #fff
      text-align center
      padding 80px 1.5rem

      h2
        font-weight bold
        font-size 48px
        line-height 1
        color #000
        margin 0 0 80px
        border 0

      .home-blog-list
        display grid
        gap 24px
        grid-template-columns repeat(3, 1fr)
        max-width 1400px
        margin 0 auto
        text-align left

        .blog-post
          will-change transform
          transition-duration 0.2s
          transition-property transform
          transition-timing-function linear

          .post-image
            width 100%
            aspect-ratio 16 / 9
            margin-bottom 20px
            background #FF3700

          .post-info
            margin 0 0 5px

          .post-title,
          .post-title a
            color #0C0D0E
            margin 0 0 10px
            text-decoration none

        .blog-post:hover,
        .blog-post:focus
          transform translateY(-8px)

      a.blog
        display inline-block
        margin-top 80px
        background #fff
        color #FF3700
        padding 15px 70px
        text-decoration none
        border 1.5px solid #FF3700

      a.blog:after
        content " "
        display inline-block
        margin-left 12px
        vertical-align middle
        background-image url(/assets/img/home/arrow-right.svg)
        background-position center center
        background-size contain
        background-repeat no-repeat
        width 12px
        height 24px
        color #FF3700
        will-change transform
        transition-duration 0.2s
        transition-property transform
        transition-timing-function linear

      a.blog:hover:after,
      a.blog:focus:after
        transform translateX(8px)

/* Tablet */

@media (max-width: 720px)
  div.docs-home main

    .content__default
      padding-left 0
      padding-right 0
      padding-top 0

    #home-hero
      padding 80px 1.5rem

      h2
        font-size 40px

    #home-docs
      padding 80px 1.5rem

      div
        font-size 14px

      h2
        font-size 28px
        margin-bottom 20px

    #home-internals
      padding 80px 1.5rem

      h2
        font-size 28px
        margin 0 0 40px

      .home-internals-list
        gap 20px
        grid-template-columns repeat(2, 1fr)

    #home-components
      padding 80px 1.5rem

      h2
        font-size 28px
        margin 0 0 40px

      .home-components-list
        gap 20px
        grid-template-columns repeat(2, 1fr)

    #home-testimonials
      padding 80px 1.5rem

      h2
        font-size 28px
        margin 0 0 40px

      .home-testimonials-list
        gap 20px
        grid-template-columns repeat(2, 1fr)

        .testimonial
          padding 20px

    #home-blog
      padding 80px 1.5rem

      h2
        font-size 28px
        margin 0 0 40px

      .home-blog-list
        gap 20px
        grid-template-columns repeat(2, 1fr)

/* Mobile */

@media (max-width: 360px)
  div.docs-home main

    #home-hero
      padding 32px 1.5rem

    #home-docs
      padding 32px 1.5rem

    #home-internals
      padding 32px 1.5rem

      .home-internals-list
        gap 16px
        grid-template-columns 1fr

    #home-components
      padding 32px 1.5rem

      .home-components-list
        gap 16px
        grid-template-columns 1fr

    #home-testimonials
      padding 32px 1.5rem

      .home-testimonials-list
        gap 16px
        grid-template-columns 1fr

    #home-blog
      padding 32px 1.5rem

      .home-blog-list
        gap 16px
        grid-template-columns 1fr
